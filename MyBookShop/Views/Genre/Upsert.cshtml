@model Genre
@{
    var title = "Добавить жанр";
}




<form method="post" asp-action="Upsert">


  
    @if (Model.GenreId != 0)
    {
        <input asp-for="GenreId" hidden />
        title = "Редактировать жанр";
    }


    <div class="border  border-success w-100 mt-5 ">
        <div class="form-group row-cols-2 p-3 ">
            <h2 class="text-primary pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8 align-content-center">
                <div class="form-group row">
                    <div class="col-4 text-end  ">
                        <label asp-for="NameGenre" class="text-primary "></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NameGenre" class="form-control align-content-end" />
                        <span asp-validation-for="NameGenre" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.GenreId != 0)
                            {
                              <input type="submit" class="btn btn-info  w-100 m-1" value="Изменить" />
                            }else{
                                <input type="submit" class="btn btn-info w-100 m-1" value="Добавить" />
                            }


                          
                        </div>


                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100 m-1"> <i class="fa-solid fa-right-from-bracket"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
    <partial name="_ValidationScriptsPartial" />
    }

}