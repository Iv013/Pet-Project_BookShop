@model IEnumerable<MyBookShop_Models.Models.Genre>

<h2 class="text-primary">Список жанров</h2>
<div class="text-lg-end">
    <a asp-controller="Genre" asp-action="Upsert" class="btn btn-primary">
        <i class="fa-regular fa-plus "></i> Добавить Жанр
    </a>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Назывние жанра
                        </th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>

                            <td width="50%">@obj.NameGenre</td>


                            <td>
                                <div>
                                    <a class="btn btn-outline-info" asp-controller="Genre" asp-route-id="@obj.GenreId" asp-action="Upsert">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a class="btn btn-outline-danger" asp-controller="Genre" asp-route-id="@obj.GenreId" asp-action="Delete">
                                        <i class="fa-sharp fa-solid fa-trash"></i> 
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }

    </div>

