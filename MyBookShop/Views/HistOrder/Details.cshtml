@model MyBookShop_Models.Models.VIewModel.OrderDetailsHistoryVM
@using MyBookShop_Utility
<form method="post">
@*    <input hidden asp-for="OrderHeader.Id" />*@
    <br />
    <div class="backgroundWhite container">
        <div class="card">
            <div class="bg-dark text-light p-2 m-0 row container">
                <div class=" col-6">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Детали заказа
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-action="Index" class="btn btn-outline-info form-control btn-sm">   Назад к списку историй состояний заказов </a>
                </div>
            </div>
            <div class="card-body pb-0">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-5">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Список покупок:</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @{
                                    var OrderTotal = 0.0;
                                }
                                @for (int i = 0; i < Model.detailList.Count(); i++)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <h6 class="my-0">@Model.detailList[i].Book.Title</h6>
                                            <small class="text-muted">@Model.detailList[i].Book.Author.NameAuthor</small>
                                        </div>
                                        <span class="text-muted">@Model.detailList[i].Book.Price</span>
                                    </li>
                                    OrderTotal += @Model.detailList[i].Book.Price;
                                }

                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-6">
                                            <h5 class="text-white">ИТОГО </h5>
                                        </div>
                                        <div class="col-6 text-right">
                                            <h5 class="text-white">$@(Model.SelectedOrderHistory.FinalOrderTotal)</h5>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            </ul>
                            <br />

                            <br />

                            

                        </div>
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Данные покупателя:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Имя покупателя</div>
                                <div class="col-9">
                                    <input asp-for="SelectedOrderHistory.FullName" type="text" readonly class="form-control" />
                                
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Номер телефона</div>
                                <div class="col-9">
                                    <input asp-for="SelectedOrderHistory.PhoneNumber" type="text" readonly class="form-control" />
 
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input <input asp-for="SelectedOrderHistory.Email" type="text" readonly class="form-control" />
                                    <span asp-validation-for="SelectedOrderHistory.Email" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Регион</div>
                                <div class="col-9">
                                    <input <input asp-for="SelectedOrderHistory.Region" type="text" readonly class="form-control" />
                                    <span asp-validation-for="SelectedOrderHistory.Region" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Город</div>
                                <div class="col-9">
                                    <input <input asp-for="SelectedOrderHistory.City" type="text" readonly class="form-control" />
                                    <span asp-validation-for="SelectedOrderHistory.City" class="text-danger"></span>

                                </div>
                            </div>
                      
                            <div class="row my-1">
                                <div class="col-3">Дата начала состояния</div>
                                <div class="col-9">
                                    <input value="@Model.SelectedOrderHistory.DateStartState" id="shippingDate" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Дата окончания состояния</div>
                                <div class="col-9">
                                    <input value="@Model.SelectedOrderHistory.DateEndState" id="shippingDate" type="text" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Состояние</div>
                                <div class="col-9 ">
                                    <input asp-for="SelectedOrderHistory.OrderStatus" type="text" readonly class="form-control bg-warning " />

                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



