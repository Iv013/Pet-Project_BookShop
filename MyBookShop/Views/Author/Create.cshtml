@model MyBookShop_Models.Models.Author

<form method="post" asp-action="Create">
    <div class="border border-dark">
        <div class="form-group row p-3 ">
            <h2 class="text-info pl-3">Добавить нового автора</h2>
        </div>
        <div class="row">
            <div class="col-6 align-content-center">
                <div class="form-group row">
                    <div class="col-4 text-bg-light ">
                        <label asp-for="NameAuthor" class="text-primary  m-2"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NameAuthor" class="form-control" />
                        <span asp-validation-for="NameAuthor" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100 m-1" value="Добавить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100 m-1"> <i class="fa-solid fa-right-from-bracket"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}