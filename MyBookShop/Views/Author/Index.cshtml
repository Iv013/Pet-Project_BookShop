@model IEnumerable<MyBookShop_Models.Models.Author>

@{

var add_open =false;
}

<h2 class="text-primary">Список авторов</h2>
<div class="text-lg-end">
    <a asp-controller="Author" asp-action="Create" class="btn btn-primary">
        <i class="fa-regular fa-plus "></i> Добавить автора
    </a>


<div>
 @if (Model.Count() > 0)
        {
            <table class= "table table-striped" >
                <thead>
                    <tr>
                        <th>
                            Имя Автора
                        </th>
                        <th> кнопочки</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                    <tr >

                            <td width="50%">@obj.NameAuthor</td>


                        <td>
                                    <div>
                                <a class="btn btn-outline-info" asp-controller="Author" asp-route-id="@obj.AuthorId" asp-action="Edit">
                                  <i class="fa-solid fa-pen-to-square"></i>
                                 </a>
                                <a class="btn btn-outline-danger" asp-controller="Author" asp-route-id="@obj.AuthorId" asp-action="Delete">
                                       <i class="fa-sharp fa-solid fa-trash"></i> 
                                </a>
                                    </div>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>

        } 

</div>

         