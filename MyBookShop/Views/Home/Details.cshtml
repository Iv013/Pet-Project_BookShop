@using MyBookShop_Utility
@model MyBookShop_Models.ViewModel.DetailsVM

<div class="">
    <form method="post">
        <input asp-for="@Model.Book.BookId" hidden />
        <div class="container backgroundWhite pt-3">
            <div class="card" style="border:1px solid #000000; ">
                <div class="bg-dark m-0  row" style="border-radius: 0px;">
                    <div class="col-12 col-md-6">
                        <h1 class="text-white">@Model.Book.Title</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-right">
                        <h1 class="text-warning text-end">@Model.Book.Author.NameAuthor</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-4  text-center">
                                <img src="@WC.ImagePath@Model.Book.Image" width="95%" class="rounded" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">

                                    <div class="col-12 ">
                                        <span class="badge p-3 border w-100" style="background-color:lavenderblush; color:black">@Model.Book.Genre.NameGenre</span>
                                        
                                        <h3 class="text-success"></h3>

                                        <div style="height:stretch" class=" text-secondary">@Html.Raw(Model.Book.Description)</div>
                                       
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h4 class=" p-2 text-center border w-100 bottom-0" style="background-color:aliceblue; color:black">Цена @Model.Book.Price Р.</h4>
                <div class="card-footer bg-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Назад</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            @if (Model.ExistInCart)
                            {
                                <a asp-action="RemoveFromCart" asp-route-id="@Model.Book.BookId" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Удалить из карзины</a>
                            }
                            else
                            { if (Model.Book.Amount>0)
                                {
                                    <button type="submit" class="btn btn-info form-control btn-lg" style="height:50px;">Добавить в карзину</button>
                                } else 
                                {
                                 <button disabled type="submit" class="btn btn-danger form-control btn-lg" style="height:50px;">Нет в наличии</button>
                                }
                               
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>